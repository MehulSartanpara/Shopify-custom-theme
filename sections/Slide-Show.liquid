<section>
  <div class="banner-slider slideshow-banner-by-section-id"
    data-banner-dots="{{ section.settings.show_dots }}"
    data-banner-silde-auto="{{ section.settings.auto_slide }}"
    data-banner-silde-auto-speed="{{ section.settings.auto_speed }}"
    data-banner-arrow="{{ section.settings.show_arrows }}"
    data-banner-infinite="{{ section.settings.infinite }}"
    data-banner-fade="{{ section.settings.fade }}"
  >
    {% for block in section.blocks %} 
      {% if block.settings.bg != blank %}
        <div class="banner-slide slide-{{ block.id }}" style="background-image: url({{ block.settings.bg  | img_url: 'master' }});">
          <div class="container">
            <div class="banner-content">
              <div class="banner-text banner-text-{{ block.settings.text_alignment }}">
                {% if block.settings.sub_text != blank %}
                  <h6>{{ block.settings.sub_text }}</h6>
                {% endif %}
                {% if block.settings.heading != blank %}
                  <h4 class="section--inner--heading">{{ block.settings.heading }}</h4>
                {% endif %}
                {% if block.settings.text != blank %}
                <p class="section--inner--text">{{ block.settings.text }}</p>
                {% endif %}
                {% if block.settings.btn_text != blank %}
                <div class="banner-button">
                    <a href="{{ block.settings.btn_link }}" class="btn primary-btn">{{ block.settings.btn_text }}</a>
                 </div>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
       {% endif %}
    {% endfor %}
  </div>
</section>
<style>
  {% for block in section.blocks %}
   {% if block.settings.bg != blank %}
     .slide-{{ block.id }} {
     background-image: url({{ block.settings.bg  | img_url: 'master' }});
     }
   {% endif %}
  {% endfor %}
</style>


{% schema %}
  {
    "name": "Slide-Show",
    "settings": [
              {
                "type": "checkbox",
                "id": "show_dots",
                "label": "Show slider dots",
                "default": true
              },
              {
                "type": "checkbox",
                "id": "show_arrows",
                "label": "Show slider arrows",
                "default": false
              },
              {
                "type": "checkbox",
                "id": "auto_slide",
                "label": "Autoplay Slide",
                "default": true
              },
              {
                "type": "range",
                "id": "auto_speed",
                "min": 1000,
                "max": 5000,
                "step": 500,
                "label": "Autoplay Speed",
                "default": 2000
              },
              {
                "type": "checkbox",
                "id": "infinite",
                "label": "Infinite Slide",
                "default": true
              },
              {
                "type": "checkbox",
                "id": "fade",
                "label": "Enable Fade Animation",
                "default": false
              }
],
	"blocks": [
        {
        "type": "Slide",
        "name": "Slide",
          "settings": [
            {
              "type": "select",
              "id": "text_alignment",
              "label": "Content alignment",
              "options": [
                {
                  "value": "left",
                  "label": "Left"
                },
                {
                  "value": "center",
                  "label": "Center"
                },
                {
                  "value": "right",
                  "label": "Right"
                }
              ],
              "default": "left"
            },
            {
              "type": "image_picker",
              "id": "bg",
              "label": "Slide"
            },
        	{
         		"type": "text",
         		"id": "sub_text",
         		"label": "Sub text"
         	},
         	{
         		"type": "text",
         		"id": "heading",
         		"label": "Title"
         	},
            {
         		"type": "text",
         		"id": "text",
         		"label": "text"
         	},
            {
         		"type": "text",
         		"id": "btn_text",
         		"label": "Button name"
         	},
            {
         		"type": "url",
         		"id": "btn_link",
         		"label": "Button link"
         	}
          ]
        }
    ],
"presets": [
      {
        "name": "Slide-Show",
        "category": "text"
      }
    ]
  }
{% endschema %}