<section class="watch-video">
	<div class="container">
		<div class="video-content">
          {% for block in section.blocks %}
			<div class="repair">
				{% if block.settings.video_img != blank %}<img src="{{ block.settings.video_img | img_url:'master' }}" class="vdo-1-play">{% endif %}
				<div class="play_btn">
                  {% render 'play-btn-icon' %}
            {% comment %}
					{% if block.settings.play_btn != blank %}<img src="{{ block.settings.play_btn | img_url:'master' }}" class="btn-1-play">{% endif %}
            {% endcomment %}
				</div>
				<div id="thevideo">
                    <span class="close-video">&#x2715</span>
                    <iframe width="560" height="315" src="{{ block.settings.video }}" frameborder="0" allowfullscreen="" include=""></iframe>
                </div>
                {% if block.settings.title != blank %}<h3>{{ block.settings.title }}</h3>{% endif %}
			</div>
          {% endfor %}
		</div>
	</div>
</section>
{% comment %}
<style>
  .watch-video {
      background-color: #FFE8E7;
      padding: 120px 0 139px;
  }
  .video-content {
      display: flex;
      justify-content: space-between;
      text-align: center;
  }
  .repair {
      position: relative;
      flex: 0 0 50%;
      max-width: calc(50% - 12px);
  }
  .play_btn {
      position: absolute;
      top: 45%;
      left: 0;
      right: 0;
      cursor: pointer;
  }
  .repair h3 {
      font-style: normal;
      font-weight: 400;
      font-size: 25px;
      line-height: 29px;
      letter-spacing: 0.05em;
      color: #000000;
      padding-top: 22px;
  }
  .vdo-1-play{
    width: 100%;
    height: 100%;
    cursor: pointer;
  }
   #thevideo {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    display: none;
}
  .video-play {
    display: block !important;
}
   #thevideo iframe {
    width: 100%;
    height: 100%;
}
  #thevideo .close-video {
    position: absolute;
    top: 0;
    right: 0;
    background: #fff;
    padding: 10px;
    cursor: pointer;
    z-index:9999;
}
  @media (max-width: 420px){
  .repair h3 {
    padding-top: 10px;
    padding-bottom: 14px;
}
  }
</style>
{% endcomment %}
{% schema %}
  {
    "name": "Watch-video Section",
    "settings": [
  
    ],
     "blocks": [
        {
        "type": "block",
        "name": "block", 		
          "settings": [
                {
                    "type" : "image_picker",
                    "id" : "video_img",
                    "label" : "Video Image"
                },
                {
                    "type" : "image_picker",
                    "id" : "play_btn",
                    "label" : "Play Button Image"
                },
                {
            		"type"  : "url",
            		"id" : "video",
            		"label" : "Video URL"
            	},
                {
                  "type"  : "text",
                  "id" : "title",
                  "label" : "Video Title"
               }
          ]
      }
    ],
    "presets": [
      {
        "name":"Watch-video Section"
      }
    ]
  }
{% endschema %}

