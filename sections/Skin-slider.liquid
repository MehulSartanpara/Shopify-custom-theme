{{ 'Skin-slider.css' | asset_url | stylesheet_tag }}
<section class="about-slider">
	<div class="container">
		<div class="about-slide about-slider-by-section-id"
          data-slide-dots="{{ section.settings.show_dots }}"
          data-slide-arrows="{{ section.settings.show_arrows }}"
          data-slide-infinite="{{ section.settings.infinite }}"
          data-slide-auto_slide="{{ section.settings.auto_slide }}"
          data-slide-auto_speed="{{ section.settings.auto_speed }}"
        >
			{% for block in section.blocks %}
				<div class="slide-content">
					<div class="slide-content-info">
						{% if block.settings.slider_img != blank %}<img src="{{ block.settings.slider_img | img_url:'master' }}">{% endif %}
						{% if block.settings.title != blank %}<h4>{{ block.settings.title }}</h4>{% endif %}
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
</section>


<style>

</style>

{% schema %}
  {
    "name": "Skin Slider",
    "settings": [
        {
          "type": "checkbox",
          "id": "show_dots",
          "label": "Show slider dots",
          "default": false
        },
        {
          "type": "checkbox",
          "id": "show_arrows",
          "label": "Show slider arrows",
          "default": true
        },
        {
          "type": "checkbox",
          "id": "infinite",
          "label": "slider infinite",
          "default": true
        },
        {
          "type": "checkbox",
          "id": "auto_slide",
          "label": "Autoplay Slide",
          "default": false
        },
        {
          "type": "range",
          "id": "auto_speed",
          "min": 1000,
          "max": 5000,
          "step": 500,
          "label": "Autoplay Speed",
          "default": 2000
        }
      
    ],
    "blocks" : [
    	{
    		"type" : "Block",
    		"name" : "title",
    		"settings" : [
    			{
    				"type" : "image_picker",
    				"id" : "slider_img",
    				"label" : "Add Image"
    			},
    			{
    				"type" : "richtext",
    				"id" : "title",
    				"label" : "Add Text"
    			}
    		]
    	}
    ],
    "presets": [
      {
        "name":"Skin Slider"
      }
    ]
  }
{% endschema %}

