{{ 'our-promise.css' | asset_url | stylesheet_tag }}
<section class="our-promise">
	<div class="container">
		<h2 class="heading">{{ section.settings.promise_title }}</h2>
		<h6>{{ section.settings.promise_sub_title }}</h6>
		<div class="promise-detail">
			{% for block in section.blocks %}
				<div class="promise-info">
                    <div class="promise-img">
    					{% if block.settings.promise_img != blank %}<img src="{{ block.settings.promise_img | img_url:'master' }}">{% endif %}
                    </div>
					{% if block.settings.title != blank %}<h3>{{ block.settings.title }}</h3>{% endif %}
					{% if block.settings.promise_desc != blank %}<p>{{ block.settings.promise_desc }}</p>{% endif %}
				</div>
			{% endfor %}
		</div>
	</div>
</section>





{% schema %}
  {
    "name": "Our-promise",
    "settings": [
    	{
    		"type" : "text",
    		"id" : "promise_title",
    		"label" : "Add Title"
    	},
    	{
    		"type" : "text",
    		"id" : "promise_sub_title",
    		"label" : "Add Sub Title"
    	}
    ],
    "blocks": [
    	{
    		"type" : "block",
    		"name" : "title",
    		"settings" : [
    			{
		    		"type" : "image_picker",
		    		"id" : "promise_img",
		    		"label" : "Add Image"
		    	},
		    	{
		    		"type" : "text",
		    		"id" : "title",
		    		"label" : "Add Title"
		    	},
		    	{
		    		"type" : "text",
		    		"id" : "promise_desc",
		    		"label" : "Add Text"
		    	}
    		]
    	}
    ],
    "presets": [
      {
        "name":"Our-promise"
      }
    ]
  }
{% endschema %}

