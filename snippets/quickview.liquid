
<div class="qv-product-images" style="opacity: 1"></div>
<div class="qv-content">
  <div class="holder">
    <h3 class="qv-product-title"></h3>
    <h4 class="qv-product-type"></h4>
    <h5 class="qv-product-price"></h5>
    <h5 class="qv-product-original-price"></h5>
    <hr />
    <div class="qv-add-to-cart">
      <div class="qv-product-options">
        
      </div>
      <div class="main--product---varients"> 
        
         

      </div>
      <div class="masterSelect">
        
      </div>
      <form method="post" action="/cart/add">
        <div class="quantity">
          <span>Quantity</span>
          <div class="qty-box--Quick-view">
            <span class="btnqty qtyminus icon icon-minus">-</span>
            <input type="text" id="quantity" name="quantity" value="1"  class="quantity-input" readonly="" >
            <span class="btnqty qtyplus icon icon-plus">+</span>
          </div>
        </div>
        <input class="main-id" type="hidden" name="id" value="" />
        <input type="submit" class="btn primary-btn" value="Add to Cart">
       </form>
      
      <div class="qv-add-to-cart-response"></div>
    </div>
    <div class="qv-product-description"></div>
  </div>
  <a class="view-product" href="">
    <span>View Full Product Details</span>
  </a>
</div>

<script>
 
// quantity Box Cart Page
$(document).on('click','.qv-content .qty-box--Quick-view .btnqty',function(){

  var qty = parseInt($(this).parent('.qty-box--Quick-view').find('.quantity-input').val());
  if($(this).hasClass('qtyplus')) {
    qty++;
  }else {
    if(qty > 0) {
      qty--;	     
    }
  }
  qty = (isNaN(qty))?1:qty;
  $(this).parent('.qty-box--Quick-view').find('.quantity-input').val(qty);
});
  

</script>









