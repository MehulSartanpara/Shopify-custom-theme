<section>
  <div class="customer-account">
    <div class="container">
      <div class="customer-account-content">
        <div class="customer-account-content--title">
           <div class="about-title">
              <h2>{{ 'customer.account.title' | t }}</h2>
              <p><a href="account/logout" class="account-logout-link"> {{ 'customer.log_out' | t }}</a></p>
          </div>
        </div>
        <div class="customer-account--details-container">
          <div class="customer-account--details-container-1">
            <div class="customer-account-order-details">
              <h2 class="order-history-title">{{ 'customer.orders.title' | t }}</h2>        
                {%- if customer.orders.size > 0 -%}
                  {%- for order in customer.orders -%}
                    <div class="customer-order-product-list">
                      <div class="customer-order-product-img">
                        <a href="{{ order.customer_url }}" aria-label="{{ 'customer.orders.order_number_link' | t: number: order.name }}">
                          {{ order.name }}
                        </a>
                      </div>
                      <div class="customer-order-product-title">
                         {{ order.created_at | time_tag: format: 'date' }}
                      </div>
                      <div class="customer-order-product-price">
                        {{ order.total_price | money_with_currency }}</td>
                      </div>
                    </div>
                  {%- endfor -%}
                  <hr>
                {%- else -%}
                  <p class="account-normal-text">{{ 'customer.orders.none' | t }}</p>
                {%- endif -%}
            </div>
          </div>
          <div class="customer-account--details-container-2">
            <div class="customer-account--account--details">
                <div class="customer-account--account--det">
                  <h2 class="order-history-title">{{ 'customer.account.details' | t }}</h2>
                </div>
                <div class="customer-account--account--names">
                  <p class="account-normal-text">{{ customer.default_address | format_address }}</p>
                </div>
                <div class="customer-account--account--views-addres">
                  <a href="{{ routes.account_addresses_url }}" class="view-address-link-account">{{ 'customer.account.view_addresses' | t }} ({{ customer.addresses_count }})</a>
                </div>
                <div class="customer-account--account--views-addres">
                  <a href="/pages/wishlist" class="view-address-link-account">View Wishlist</a>
                </div>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{% section 'shipping' %}
